<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema Base -->
    <style name="Theme.CamApp.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Tema Guinda - Claro -->
    <style name="Theme.CamApp.Guinda.Light" parent="Theme.CamApp.Base">
        <item name="colorPrimary">#8B1538</item>
        <item name="colorPrimaryVariant">#6B0028</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#C4314B</item>
        <item name="colorSecondaryVariant">#A01B31</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FAFAFA</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorError">#B00020</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Tema Guinda - Oscuro -->
    <style name="Theme.CamApp.Guinda.Dark" parent="Theme.CamApp.Base">
        <item name="colorPrimary">#C4314B</item>
        <item name="colorPrimaryVariant">#8B1538</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#E84D66</item>
        <item name="colorSecondaryVariant">#C4314B</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorError">#CF6679</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Tema Azul - Claro -->
    <style name="Theme.CamApp.Azul.Light" parent="Theme.CamApp.Base">
        <item name="colorPrimary">#1976D2</item>
        <item name="colorPrimaryVariant">#0D47A1</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2196F3</item>
        <item name="colorSecondaryVariant">#1976D2</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorSurface">#FAFAFA</item>
        <item name="colorOnSurface">#000000</item>
        <item name="colorError">#B00020</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <!-- Tema Azul - Oscuro -->
    <style name="Theme.CamApp.Azul.Dark" parent="Theme.CamApp.Base">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#64B5F6</item>
        <item name="colorSecondaryVariant">#2196F3</item>
        <item name="colorOnSecondary">#000000</item>
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorError">#CF6679</item>
        <item name="android:navigationBarColor">#121212</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- Tema para pantalla completa (visor de fotos) -->
    <style name="Theme.CamApp.FullScreen" parent="Theme.CamApp.Base">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <!-- Estilos para botones -->
    <style name="Widget.CamApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.CamApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilos para FAB -->
    <style name="Widget.CamApp.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">6dp</item>
        <item name="rippleColor">?attr/colorOnSecondary</item>
    </style>

    <!-- Estilos para Cards -->
    <style name="Widget.CamApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Estilos para TextInputLayout -->
    <style name="Widget.CamApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

</resources>